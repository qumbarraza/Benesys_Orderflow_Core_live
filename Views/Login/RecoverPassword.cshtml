@model TBENesys_Orderflow_Core.ViewModels.RecoverPasswordViewModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm("RecoverPassword", "Login", FormMethod.Post, new { @class = "col-lg-12" }))
{
    <div class="container-login100">
        <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
            <form class="login100-form validate-form flex-sb flex-w">
                <span class="login100-form-title p-b-32">
                    TBENesys Orderflow (New Password)
                </span>
                @Html.HiddenFor(d => d.UserID)
                <span class="txt1 p-b-11">
                    New Password
                </span>
                <div class="wrap-input100 validate-input" data-validate="Username is required">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "input100"})
                    <span class="focus-input100"></span>
                </div>
                <span class="txt1 p-b-11">
                    Confirm Password
                </span>
                <div class="wrap-input100 validate-input" data-validate="Username is required">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input100"})
                    <span class="focus-input100"></span>
                </div>
                <div class="flex-sb-m w-full">
                    <div class="contact100-form-checkbox">
                        @if (@ViewBag.ResultMessage != null && @ViewBag.ResultMessage.ToString().Contains("Error"))
                        {
                            <label class="txt1 p-b-11" style="color:red;">
                                @ViewBag.ResultMessage
                            </label>
                        }
                        else if (@ViewBag.ResultMessage != null)
                        {
                            <label class="txt1 p-b-11" style="color:green;">
                                @ViewBag.ResultMessage
                            </label>
                        }
                    </div>
                </div>
                <div class="flex-sb-m w-full">
                    <div class="contact100-form-checkbox">
                        <a href=@Url.Action("Login", "Login" ) class="txt3">
                            Return to login
                        </a>
                    </div>
                </div>
                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        Update Password
                    </button>
                </div>

            </form>
        </div>
    </div>
}