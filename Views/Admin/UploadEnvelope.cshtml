
@{
    string ActionText = "";

    ViewBag.Title = "Upload Envelope";
    ActionText = "Save";
}



@using (Html.BeginForm("UploadEnvelope", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "col-lg-12" }))
{
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@ViewBag.Title</h4>
                <p class="card-description">
                </p>
                <form class="forms-sample">
                    <div class="form-group">
                        @if (@ViewBag.ResultMessage != null && @ViewBag.ResultMessage.ToString().Contains("Error"))
                        {
                            <div class="alert alert-danger">@ViewBag.ResultMessage</div>
                        }
                        else if (@ViewBag.ResultMessage != null)
                        {
                            <div class="alert alert-success">@ViewBag.ResultMessage</div>
                        }
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <button class="close" data-dismiss="alert"></button>
                                @Html.ValidationSummary()
                            </div>
                        }
                        <div class="clear"></div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Select File")
                        <input type="file" name="img[]" class="file-upload-default" id="UploadedFile" name="UploadedFile" />
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled placeholder="Upload CSV" />
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-primary" type="button"> Upload </button>
                            </span>
                        </div>
                        <a style="color: red; font-size: 13px;" title="View" href="@Url.Action("DownloadSampleEnvelope")"> <i class="mdi mdi-download"></i>Click here to download sample envelope csv file</a>

                    </div>
                    <button type="submit" class="btn btn-primary mr-2"> @ActionText </button>
                    <a href="@Url.Action("EnvelopesListing")" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
}


@section Scripts {
    <script src="~/assets/js/file-upload.js"></script>
    <script type="text/javascript">
    </script>
}
